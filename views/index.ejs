<%-include('include/_header')-%>
<h2 class="text-center" id="topic"> <%=username%></h2>
<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Chat Application</h5>
          <hr />
          <div id="chat-window m-4">
            <div
              id="output"
              class="overflow-auto chat-messages p-4 m-3"
              style="height: 60vh"
            ></div>
            <div id="feedback"></div>
          </div>
          <div class="d-flex justify-content-around">
            <input type="text" class="col-11 messageBox" id="message" placeholder="Message" />
            <button id="send" class="btn btn-outline-secondary text-dark">
              send
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="m-4">
  <div class="row">
    <div class="col-12 form-group fixed-bottom">
      <div class="mt-3">
        <input
          type="hidden"
          id="handle"
          value="<%=username%>"
          placeholder="Handle"
        />
      </div>
    </div>
  </div>

  <%-include('include/_footer')-%>
</div>
